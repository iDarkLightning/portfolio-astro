---
import { Nav } from "../components/nav";
import ProjectCard from "../components/project-card.astro";
import SectionWrapper from "../components/section-wrapper.astro";
import Layout from "../layouts/Layout.astro";
import { getWork } from "../lib/cms";

const { data } = await getWork();
---

<Layout title="Nirjhor Nath - About">
  <Nav client:load route="/work" />
  <SectionWrapper color="#67e8f9" title="My Work">
    <div class="flex flex-col pb-6 gap-6">
      {data.allProjects.map((project) => <ProjectCard project={project} />)}
    </div>
  </SectionWrapper>
</Layout>
