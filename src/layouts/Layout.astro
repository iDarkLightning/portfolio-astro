---
import Cursor from "../components/cursor.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="h-screen">
      <section
        class="w-10/12 md:w-8/12 lg:w-7/12 xl:w-5/12 max-w-[100rem] m-auto h-full"
      >
        <slot />
      </section>
    </main>
    <style is:global>
      @font-face {
        font-family: Bigilla;
        font-weight: bold;
        src: url("/fonts/Bigilla-Bold.otf") format("otf");
      }
      @font-face {
        font-family: Messina;
        src: url("/fonts/MessinaSans-Regular.woff") format("woff");
      }
      @font-face {
        font-family: Messina;
        font-weight: 500;
        src: url("/fonts/MessinaSans-SemiBold.woff") format("woff");
      }

      html {
        background-color: theme("colors.background");
        color: white;
      }

      h1 {
        font-family: Bigilla !important;
      }

      p,
      a {
        font-family: Messina !important;
      }

      a {
        font-weight: 500;
      }
    </style>
    <Cursor />
  </body>
</html>
