---
import "../styles/global.css";
import Cursor from "../components/cursor.astro";
export interface Props {
  title: string;
  className?: string;
}

const { title, className } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="h-screen" id="main">
      <div class="w-[50%] bg-red-200 m-auto relative">
        <slot name="nav" />
      </div>
      <section
        class:list={[
          "w-11/12 md:w-8/12 lg:w-7/12 xl:w-5/12 max-w-[75rem] m-auto",
          className,
        ]}
      >
        <span id="main">
          <slot />
        </span>
      </section>
    </main>
  </body>
</html>
